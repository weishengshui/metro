    <servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>image</servlet-name>
        <url-pattern>/image.jpg</url-pattern>
    </servlet-mapping>
    
     <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
	
</web-app>
